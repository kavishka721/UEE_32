<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityInitialScreen">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="130dp"
        android:layout_height="121dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.203"
        app:srcCompat="@drawable/peopleswaveicon" />

    <Button
        android:id="@+id/floginbtn"
        android:layout_width="203dp"
        android:layout_height="92dp"
        android:background="@drawable/button_border"
        android:onClick="navigateToLogin"
        android:text="LOGIN"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:backgroundTint="@drawable/button_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="203dp"
        android:layout_height="92dp"
        android:background="@drawable/signup_btn_border"
        android:onClick="navigateToSignup"
        android:text="SIGNUP"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:backgroundTint="@drawable/signup_btn_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.729" />

</androidx.constraintlayout.widget.ConstraintLayout>